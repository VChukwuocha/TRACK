<button onclick="topFunction()" id="topBtn" title="Go to top">Back to Top</button>
<script>
//Get the button
var mybutton = document.getElementById("topBtn");

// When the user scrolls down 20px from the top of the document, show the button
window.onscroll = function() {scrollFunction()};

function scrollFunction() {
  if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
    mybutton.style.display = "block";
  } else {
    mybutton.style.display = "none";
  }
}

// When the user clicks on the button, scroll to the top of the document
function topFunction() {
  document.body.scrollTop = 0;
  document.documentElement.scrollTop = 0;
}
</script>

<div class="grid-container">

	<%- include("../partials/header.ejs")%>

	<main class="main">
			<script>
        const currentTheme = localStorage.getItem('theme');
        if (currentTheme) {
          document.documentElement.setAttribute('data-theme', currentTheme);
          localStorage.setItem('theme', currentTheme);
        }
		    </script>

		    <a href="javascript:history.back()" class="btn btn-primary">Go Back to Student Profile</a>

			 <div class =  class-header>
		          <h1><%= goal.name %></h1>

				  <button type="button" class="btn btn-primary">
		            <a href="/student/<%= student.id%>/goal/<%= goal.id%>/goal_edit">Edit Goal</a>
		          </button>
        	</div>

			<div class = "description">
				<h5><%= goal.description %></h5>
			</div>

				<div class = "class-input">
					<form  action="/student/<%= student.id %>/goal/<%= goal.id %>/goaldata/create" id="submitForm" method="post">

						<table style="position: center" id="goalInput">


							<%if(goal.methodOfCollection[0] == "score") { %>
								<!---<tr class = "table-active">
									<td>Percentage Completed:</td><td> <input type="text" name="percentage"></td>
								</tr>--->
								<div class="generic-box">
      								<label for="score">Score:</label>
